@model currencycalc.Models.ExchangeModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Currency Calculator</h1>
        <p class="lead">Convert the currency</p>
        
        <div class="convert-form">
            <form method="POST" asp-controller="Home" asp-action="Convert">
                <div class="row">
                    <div class="form-group col-md-3">
                        <input type="number" class="form-control" Name="InputValue" value="@Model.InputValue" max="99999" />
                    </div>
                    <div class="form-group col-md-2">
                        <select asp-for="SelectedCurrency" class="form-control" asp-items="@ViewBag.Currencies"></select>
                    </div>
                    <div class="form-group col-md-2">
                        <small class="ml-5 mr-2">convert to</small>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="ConvertToCurrency" class="form-control" asp-items="@ViewBag.Currencies"></select>
                    </div>
                    <div class="form-group col-md-2">
                        <button class="btn btn-primary" class="form-control" type="submit">Convert</button>
                    </div>
                </div>
                
            </form>
            @if (Model.Result != 0)
            {
                <div class="d-block">
                    <span>@Model.InputValue</span>
                    <span>@Model.SelectedCurrency</span>
                    <span>=</span>
                    <span>@Model.Result</span>
                    <span>@Model.ConvertToCurrency</span>
                </div>
            }
        </div>
    </div>
</div>